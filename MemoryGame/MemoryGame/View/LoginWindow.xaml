<Window x:Class="MemoryGame.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.View"
        xmlns:vm="clr-namespace:MemoryGame.ViewModel.Login"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="700">
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <Style x:Key="ButtonStyleTurqoise" TargetType="Button">
            <!-- Default appearance properties -->
            <Setter Property="Background" Value="#40E0D0"/>
            <!-- Turquoise -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,7"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#A020F0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- Main button border -->
                        <Border x:Name="MainBorder" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                            <!-- Inner content with slight gradient effect -->
                            <Border x:Name="InnerBorder" 
                                CornerRadius="5" 
                                Margin="1">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#50FFFFFF" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <!-- Content of the button -->
                                <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Border>
                        <!-- Visual state triggers -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF9933"/>
                                <!-- Orange -->
                                <Setter TargetName="MainBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="1" BlurRadius="4" Color="#40000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF8000"/>
                                <!-- Darker Orange -->
                                <Setter TargetName="InnerBorder" Property="Margin" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#A0A0A0"/>
                                <!-- Gray -->
                                <Setter Property="Foreground" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonStyleOrange" TargetType="Button">
            <!-- Default appearance properties -->
            <Setter Property="Background" Value="#FF9933"/>
            <!-- Orange -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,7"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#cbc3e3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- Main button border -->
                        <Border x:Name="MainBorder" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                            <!-- Inner content with slight gradient effect -->
                            <Border x:Name="InnerBorder" 
                                CornerRadius="5" 
                                Margin="1">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#50FFFFFF" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <!-- Content of the button -->
                                <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Border>
                        <!-- Visual state triggers -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40E0D0"/>
                                <!-- Turquoise -->
                                <Setter TargetName="MainBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="1" BlurRadius="4" Color="#40000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#20B2AA"/>
                                <!-- Darker Turquoise -->
                                <Setter TargetName="InnerBorder" Property="Margin" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#A0A0A0"/>
                                <!-- Gray -->
                                <Setter Property="Foreground" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="350"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Background="Orange" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto" MinWidth="250" />
            </Grid.ColumnDefinitions>

            <ListBox Grid.Column="0" Margin="45,61,45,37" ItemsSource="{Binding ListboxItems}"/>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="284"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Row="0" Source="/LoginImages/dog.jpg" Margin="32,0,31,0" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="&lt;&lt;" Width="77" Height="36" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonStyleOrange}" 
                            Command="{Binding ButtonLeftArrowClick}"/>
                    <Button Grid.Column="1" Content="&gt;&gt;" Width="75" Height="35" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonStyleOrange}"
                            Command="{Binding ButtonRightArrowClick}"/>
                </Grid>
            </Grid>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="0" Background="Turquoise">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="0"  Content="New user" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonStyleTurqoise}"
                    Command="{Binding ButtonNewUserClick}"/>
            <Button Grid.Row="0" Grid.Column="1"  Content="Delete user" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonStyleTurqoise}"
                    Command="{Binding ButtonDeleteUserClick}"/>
            <Button Grid.Row="0" Grid.Column="2"  Content="Play" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonStyleTurqoise}"
                    Command="{Binding ButtonPlayClick}"/>
            <Button Grid.Row="0" Grid.Column="3"  Content="Cancel" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonStyleTurqoise}"
                    Command="{Binding ButtonCancelClick}"/>
        </Grid>
    </Grid>
</Window>
